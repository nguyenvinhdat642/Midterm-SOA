<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Đăng ký</title>
  <link rel="stylesheet" href="css/styles-login.css">

  <script>
    document.addEventListener('DOMContentLoaded', function () {
      document.getElementById('registrationForm').addEventListener('submit', function (event) {
        var password = document.getElementById('password').value;
        var confirmPassword = document.getElementById('confirmPassword').value;
        var passwordError = document.getElementById('password-error');
        if (password.length < 8) {
          passwordError.innerHTML = 'Mật khẩu phải có ít nhất 8 ký tự!';
          event.preventDefault();
        } 

        if (password !== confirmPassword) {
          passwordError.innerHTML = 'Mật khẩu không khớp!';
          event.preventDefault();
        } else {
          passwordError.innerHTML = '';
        }
      });
    });
  </script>
</head>

<body>
  <div class="container">
    <div class="registration form">
      <header>Đăng ký</header>
      <form action="/register" method="post" id="registrationForm">
        <input type="text" name="email" placeholder="  Điền Email của bạn" required>
        <input type="password" name="password" id="password" placeholder="Nhập mật khẩu" required>
        <input type="password" name="confirm_password" id="confirmPassword" placeholder="Xác thực lại mật khẩu"
          required>

        <div id="password-error" style="color: red; margin-bottom: 10px;"></div>
        <input type="submit" class="button" value="register">
      </form>
      <div class="signup">
        <span class="signup">Bạn đã có tài khoản?
          <a href="/login">Đăng nhập</a>
        </span>
      </div>
    </div>
  </div>
</body>

</html>
